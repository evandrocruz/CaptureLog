<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.insplore.jun.capturetag.SessionSettings">

    <TextView android:id="@+id/session_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/session_about" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/session_about"/>

    <TextView android:id="@+id/session_text_sound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/session_text_sound" />

    <ToggleButton android:id="@+id/session_text_togglebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ToggleButton android:id="@+id/session_sound_togglebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</FrameLayout>
